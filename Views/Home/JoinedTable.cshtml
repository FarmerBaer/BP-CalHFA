@*
  * The purpose of this Razor Page is to display the joined table produced by
  * the SQL script in an easy to monitor and readable format within the testing space.
*@ 



@model List<BP_CalHFA.Data.CalHFA>
@{
    ViewData["Title"] = "Joined Table";
}

<div class="text-center">
    <h1 class="display-4">Joined Table</h1>
</div>

<style>
    .content-table {
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 0.9em;
        min-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }
        .content-table thead tr {
            background-color: #dfe6e9;
            color: #2d3436;
            text-align: left;
            font-weight: bold;
        }
        .content-table tbody td {
            background-color: #2d3436;
            color: #ffffff;
        }
        .content-table th,
        .content-table td {
            padding: 7px 7px;
        }
</style>

<table class="content-table">
    <thead>
        <tr>
            <th>Status Code</th>
            <th>Loan ID</th>
            <th>Category ID</th>
            <th>Status Date</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null)
            {
                foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusCode)<br />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LoanID)<br />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LoanCategoryID)<br />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusDate)<br />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)<br />
                    </td>
                </tr>
                }
            }
        }
    </tbody>
</table>
